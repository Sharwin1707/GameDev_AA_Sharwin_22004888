<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E8F5E8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/questionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 10"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginEnd="16dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="50"
                        android:progressTint="#4CAF50"
                        android:progressBackgroundTint="#E8F5E8"/>
                </LinearLayout>

                <!-- Timer and Score Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Timer -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FFEBEE"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â±ï¸"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/timerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12s"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722"/>
                    </LinearLayout>

                    <!-- Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end"
                        android:background="#FFF8E1"
                        android:padding="12dp"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ†"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/scoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,450"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#F57C00"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/questionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Question Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4CAF50"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/questionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Is this item recyclable?"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Item Image -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <!-- Background Circle -->
                    <View
                        android:id="@+id/bgCircle"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:background="#E8F5E8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- Item Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:layout_constraintTop_toTopOf="@id/bgCircle"
                        app:layout_constraintStart_toStartOf="@id/bgCircle"
                        app:layout_constraintEnd_toEndOf="@id/bgCircle"
                        app:layout_constraintBottom_toBottomOf="@id/bgCircle">

                        <ImageView
                            android:id="@+id/itemImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Item to sort"
                            android:scaleType="centerInside"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:padding="20dp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Hint Button -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_dialog_info"
                        app:fabSize="mini"
                        app:backgroundTint="#FFB300"
                        app:tint="#FFFFFF"
                        app:layout_constraintTop_toTopOf="@id/bgCircle"
                        app:layout_constraintEnd_toEndOf="@id/bgCircle"
                        android:layout_margin="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Item Label -->
                <TextView
                    android:id="@+id/itemLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¶ Plastic Water Bottle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="#E8F5E8"
                    android:textColor="#2E7D32"
                    android:padding="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Decision Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/questionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <!-- Recycle Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecycle"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="â™»ï¸ RECYCLE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="32dp"
                app:backgroundTint="#4CAF50"/>

            <!-- Trash Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrash"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ—‘ï¸ TRASH"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="32dp"
                app:backgroundTint="#F44336"/>
        </LinearLayout>

        <!-- Feedback Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/feedbackCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰"
                    android:textSize="48sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/feedbackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excellent! You're helping save the planet!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/additionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plastic bottles can be recycled into new bottles, clothing, and carpets!"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:background="#F5F5F5"
                    android:padding="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/feedbackCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="NEXT CHALLENGE âž¡ï¸"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:cornerRadius="28dp"
            app:backgroundTint="#FF5722"/>

        <!-- Streak Counter -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/streakCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnNextItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFF3E0">

            <TextView
                android:id="@+id/streakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ 5 in a row!"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
