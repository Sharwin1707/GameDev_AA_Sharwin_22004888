<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/status_bar_bg"
        android:elevation="4dp">

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/timer_background"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60s"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Score Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/score_background"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Game Instructions -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBar"
        android:layout_marginTop="16dp"
        android:text="ðŸŽ¯ Drag items to the correct recycling bins!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/instruction_bg"
        android:padding="12dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- Trash Items Container -->
    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionText"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99000000"
        android:padding="20dp"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITEMS TO SORT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.1" />

        <!-- Items Grid -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true">

            <!-- Box Item -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_box"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/box"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Box"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Food Item -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_food"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/food"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Steel Item -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_steel"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/steel"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steel"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tissue Item -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_tissue"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tissue"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tissue"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_plastic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bottle"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Bottle"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_card_bg"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/trash_newspaper"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/newspaper"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News Paper"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>

    <!-- Recycling Bins Section -->
    <LinearLayout
        android:id="@+id/binsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        android:orientation="vertical"
        android:background="@drawable/bins_container_bg"
        android:padding="10dp"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™»ï¸ RECYCLING BINS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:letterSpacing="0.05" />

        <LinearLayout
            android:id="@+id/binLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Paper Bin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bin_card_bg"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/paperBin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/paper_bin"
                    android:contentDescription="Paper Bin"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAPER"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Plastic Bin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bin_card_bg"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/plasticBin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/plastic_bin"
                    android:contentDescription="Plastic Bin"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLASTIC"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Metal Bin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bin_card_bg"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/metalBin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/metal_bin"
                    android:contentDescription="Metal Bin"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="METAL"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#607D8B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Organic Bin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bin_card_bg"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/organicBin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/organic_bin"
                    android:contentDescription="Organic Bin"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORGANIC"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>