<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Background gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bck7"
        android:layout_margin="-28dp" />

    <!-- Decorative top circle with recycle symbol -->
    <LinearLayout
        android:id="@+id/decorativeIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™»"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <!-- Main title with enhanced styling -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycle Time!"
        android:textSize="46sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/decorativeIcon"
        android:layout_marginTop="25dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:letterSpacing="0.08" />

    <!-- Subtitle with glow effect -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Our Planet, One Item at a Time"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleText"
        android:layout_marginTop="12dp"
        android:shadowColor="#4CAF50"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8" />

    <!-- Developer info card -->
    <LinearLayout
        android:id="@+id/nameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/card_bg"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="6dp">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sharwin A/L Rajamogun"
            android:textColor="#1B5E20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.02" />

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#4CAF50"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22004888/1"
            android:textColor="#388E3C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Button container with enhanced styling -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameContainer"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Play button with gradient effect -->
        <LinearLayout
            android:id="@+id/playButton"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/play_btn_bg"
            android:gravity="center"
            android:elevation="8dp"
            android:layout_marginBottom="18dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ® PLAY NOW"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.04"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />
        </LinearLayout>

        <!-- Info button -->
        <LinearLayout
            android:id="@+id/infoButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/info_btn_bg"
            android:gravity="center"
            android:elevation="4dp"
            android:layout_marginBottom="18dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ HOW TO PLAY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:letterSpacing="0.03" />
        </LinearLayout>

        <!-- Exit button -->
        <LinearLayout
            android:id="@+id/exitButton"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/exit_btn_bg"
            android:gravity="center"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ• EXIT"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.05"
                android:alpha="0.9" />
        </LinearLayout>
    </LinearLayout>


    

</RelativeLayout>




